<html>
<head>
	<title>Home&mdash;Intraspect</title>
	<link href="/css/main.css" rel="stylesheet">
	 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
	  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	 <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
	 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
	 <script src="../js/homepage.js"></script>
	 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
	<body>

		<nav>
   	<div class="nav-wrapper">
	 <a href="/homepage" class="brand-logo">Intraspect</a>
	 <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
	 <ul class="right hide-on-med-and-down">
	   <li><a href="/homepage">Home</a></li>
	   <li><a href="/history">History</a></li>
	   <li><a href="/preferences">Preferences</a></li>
	   <li><a href="/profile">Profile</a></li>
	 </ul>
	 <ul class="side-nav" id="mobile-demo">
	   <li><a href="/homepage">Home</a></li>
	   <li><a href="/history">History</a></li>
	   <li><a href="/preferences">Preferences</a></li>
	   <li><a href="/profile">Profile</a></li>
	 </ul>
   </div>
 </nav>

 <div class="container">

		<form id="mainform" action="/submit" method="post"></form>

			<div class="activity-container">
				<p class="input-field">
				<select>
				{{#each user.local.activities}}
				      <option name='currAct' value="{{@index}}">{{name}}</option>
				 {{/each}}
				    </select>
				    <label>Select Activity</label>

				</p>
			<form action="/addact" method="post">
				<input type="text" name="newAct" placeholder="Enter new activity"/>
				<button type="submit" value="+"/>
				<!-- <a class="btn-floating btn-small waves-effect waves-light red" id="add-activity"><i class="material-icons">add</i></a> -->
			</form>
			</div>
			<br>
			<!-- <center><h6 class="happy">How happy do you feel?</h3></center> -->
				<label for="" name="comment">How did this activity make you feel?</label>
				<p class="range-field">
		      	<input type="range" id="test5" min="1" max="10" name="score"/>

		    </p>

			<!-- <hr> -->
			<textarea name="reason" class="materialize-textarea" placeholder="Why do you feel this way?"></textarea>
			<br>

				<p class="flow-text">Add Tags:</p>
				{{#each user.local.tags}}
				<input type="checkbox" class="filled-in" id="filled-in-box{{@index}}" />
		        <label class="check-label" for="filled-in-box{{@index}}">{{this}}</label>

<!-- 				<input type="checkbox" class="filled-in" id="filled-in-box2" />
		        <label class="check-label" for="filled-in-box2">Playful</label>

				<input type="checkbox" class="filled-in" id="filled-in-box3" />
		        <label class="check-label" for="filled-in-box3">Enthusiastic</label>

				<input type="checkbox" class="filled-in" id="filled-in-box4" />
		        <label class="check-label" for="filled-in-box4">Sad</label>

				<input type="checkbox" class="filled-in" id="filled-in-box5" />
		        <label class="check-label" for="filled-in-box5">Morose</label>

				<input type="checkbox" class="filled-in" id="filled-in-box6" />
		        <label class="check-label" for="filled-in-box6">Energetic</label> -->
				{{/each}}

				<span id="newtags">

				</span>

				<br><br>

				<!-- <a href="#" id="new-tag">+ Create New Tag</a> -->
				<form action="/addtag" method="post">
					<input type="text" name="newTag" placeholder="Enter new tag"/>
					<button type="submit" value="+ Create New Tag"/>
				</form>
				<!-- <a href="#" class="waves-effect waves-light btn-flat" id="new-tag"><i class="material-icons left">add</i>Create New Tag</a> -->

			<br>
			<br>
			<br>

			<a class="btn-floating btn-large waves-effect waves-light red right" href="/history"><i class="material-icons">check</i></a>
		</form>
	</div>
	</body>
</html>
